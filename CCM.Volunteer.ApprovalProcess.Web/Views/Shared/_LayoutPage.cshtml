@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="viewport" content="minimal-ui">
    <meta name="viewport" content="user-scalable=no, width=device-width, initial-scale=1.0, maximum-scale=1.0" />

    <title>CCM Volunteer Management</title>

    <!-- Styles -->
    @Html.Raw(SquishIt.Framework.Bundle.Css()
            .Add("~/Content/css/bootstrap.css")
            .Add("~/Content/css/bootstrap-select.css")
            .Add("~/Content/css/datepicker.css")
            .Add("~/Content/css/main.css")
            .Render("~/Content/css/all_#.css")
    )
    @*<link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap-select.min.css" rel="stylesheet" />
    <link href="~/Content/css/datepicker.css" rel="stylesheet" />
    <link href="~/Content/css/main.css" rel="stylesheet" />*@

</head>
<body>
    @Html.Partial("Views/Shared/_TopBar.cshtml")

    <div class="container">
        @RenderBody()

        <footer class="footer pull-left">
            &copy; @DateTime.Now.Year Calvary Chapel Melbourne. All Rights Reserved. <a href="http://www.calvaryccm.com/privacy-policy">Privacy Policy</a>
        </footer>
    </div>

    <!-- Javascript -->
    <script type="text/javascript"> window.applicationBaseUrl = "@Html.Raw(Url.Content("~/"))";</script>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="/js/jquery-1.9.0.min.js"><\/script>')</script>

    @Html.Raw(SquishIt.Framework.Bundle.JavaScript()
    .Add("~/Content/Scripts/bootstrap.js")
    .Add("~/Content/Scripts/bootstrap-select.js")
    .Add("~/Content/Scripts/jquery.timeago.js")
    .Add("~/Content/Scripts/jquery.lazyload.js")
    .Add("~/Content/Scripts/jquery.validate.js")
    .Add("~/Content/Scripts/bootstrap-datepicker.js")
    .Add("~/Content/Scripts/main.js")
    .Render("~/Content/Scripts/all_#.js")
    )

</body>

</html>
